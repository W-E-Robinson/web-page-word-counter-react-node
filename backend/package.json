{
    "name": "Web Page Word Counter Microservices Backend",
    "version": "1.0.0",
    "description": "Web server that returns a summary of words in a web page",
    "scripts": {
        "dev": "node --inspect -r ts-node/register ./node_modules/.bin/moleculer-runner --config ./src/moleculer.config.ts --hot ./src/**/*.service.ts",
        "test": "jest --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "pretsc": "rimraf -g ./dist/*",
        "tsc": "tsc -p tsconfig.build.json"
    },
    "keywords": [
        "microservices",
        "moleculer"
    ],
    "author": "Will Robinson (github: W-E-Robinson)",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/supertest": "^6.0.2",

        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^28.8.0",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "rimraf": "^6.0.1",

        "jest": "^29.7.0",
        "moleculer-repl": "^0.7.3",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "supertest": "^7.0.0"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "cheerio": "^1.0.0",
        "moleculer": "^0.14.34",
        "moleculer-web": "^0.10.7",
        "nats": "^2.7.1"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/?(*.)+(spec|test).ts"
        ]
    },
    "engines": {
        "node": ">= 18.x.x"
    }
}
